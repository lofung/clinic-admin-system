<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i>  Login</h1>
        <%- include ("./partials/messages"); %>
        <form action="/auth/login" method="POST">
          <div class="form-group">
            <label for="loginId">Login ID</label>
            <input
              type="name"
              id="loginId"
              name="loginId"
              class="form-control"
              placeholder="Enter Login ID"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Login</button>
        </form>
        <p class="lead mt-4">
          No Account? <a href="/auth/register">Register</a>
        </p>
      </div>
      <div>You may try to login at this two accounts
        <div>{username: admindemo, password: 0000}</div>
        <div>{username: userdemo, password: 0000}</div>
        <br />
        You will have full rights for the admin demo account. So please do not break the demo database deleting everything :)
      </div>
    </div>

  </div>